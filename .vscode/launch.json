    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python : Update calculation",
            "type": "python",
            "request": "launch",
            "program": "simulation_calculations/update_simulation_calculations.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python : Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_ENV": "dev"
            },
            "args": [
                "run",
                "--reload",
                "--no-debugger"
            ],
            "jinja": true
        }
    ]
}